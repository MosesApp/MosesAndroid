<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/group_avatar"
                android:contentDescription="@string/avatar_image"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/avatar_example"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"/>


            <TextView
                android:id="@+id/home_group_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/textColorHomePrimary"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_body1"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/group_avatar"
                android:layout_toEndOf="@id/group_avatar"/>

            <TextView
                android:id="@+id/group_balance_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/textColorHomePrimary"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_body2"
                android:text="$100"
                android:layout_toLeftOf="@+id/balance_indicator_circle"
                android:layout_toStartOf="@+id/balance_indicator_circle"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/balance_indicator_circle"
                android:contentDescription="@string/balance_indicator"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/balance_indicator_circle"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
